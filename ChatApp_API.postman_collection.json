{
	"info": {
		"_postman_id": "chatapp-api-001",
		"name": "ChatApp API",
		"description": "Complete API test collection for ChatApp Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "default"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		},
		{
			"key": "topicId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": ["{{baseUrl}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.user_id) {",
									"        pm.environment.set('userId', jsonData.user_id);",
									"    }",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!@#\",\n  \"phone\": \"+1234567890\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"Test123!@#\",\n  \"totp_code\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login"]
						}
					}
				},
				{
					"name": "Login with Backup Code",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"Test123!@#\",\n  \"backup_code\": \"12345678\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login-backup",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "login-backup"]
						}
					}
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "me"]
						}
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/logout",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "logout"]
						}
					}
				},
				{
					"name": "Update Preferences",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"preferences\": {\n    \"theme\": \"dark\",\n    \"language\": \"en\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/preferences",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "preferences"]
						}
					}
				},
				{
					"name": "Change Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"current_password\": \"Test123!@#\",\n  \"new_password\": \"NewPass123!@#\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/change-password",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "change-password"]
						}
					}
				},
				{
					"name": "Regenerate Backup Codes",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/backup-codes",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "backup-codes"]
						}
					}
				}
			]
		},
		{
			"name": "Topics",
			"item": [
				{
					"name": "List Topics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/topics?limit=20&offset=0&sort_by=last_activity",
							"host": ["{{baseUrl}}"],
							"path": ["api", "topics"],
							"query": [
								{
									"key": "limit",
									"value": "20"
								},
								{
									"key": "offset",
									"value": "0"
								},
								{
									"key": "sort_by",
									"value": "last_activity"
								}
							]
						}
					}
				},
				{
					"name": "Create Topic",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.id) {",
									"        pm.environment.set('topicId', jsonData.data.id);",
									"    }",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Test Topic\",\n  \"description\": \"A test topic for API testing\",\n  \"tags\": [\"test\", \"api\"],\n  \"settings\": {\n    \"allow_anonymous\": true,\n    \"require_approval\": false\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/topics",
							"host": ["{{baseUrl}}"],
							"path": ["api", "topics"]
						}
					}
				},
				{
					"name": "Get Topic by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/topics/{{topicId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "topics", "{{topicId}}"]
						}
					}
				},
				{
					"name": "Join Topic",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/topics/{{topicId}}/join",
							"host": ["{{baseUrl}}"],
							"path": ["api", "topics", "{{topicId}}", "join"]
						}
					}
				}
			]
		},
		{
			"name": "Messages",
			"item": [
				{
					"name": "Get Topic Messages",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/messages/topic/{{topicId}}?limit=50&offset=0",
							"host": ["{{baseUrl}}"],
							"path": ["api", "messages", "topic", "{{topicId}}"],
							"query": [
								{
									"key": "limit",
									"value": "50"
								},
								{
									"key": "offset",
									"value": "0"
								}
							]
						}
					}
				},
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"Hello, this is a test message!\",\n  \"message_type\": \"text\",\n  \"is_anonymous\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/messages/topic/{{topicId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "messages", "topic", "{{topicId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users/profile",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "profile"]
						}
					}
				},
				{
					"name": "Search Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users/search?q=test",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "search"],
							"query": [
								{
									"key": "q",
									"value": "test"
								}
							]
						}
					}
				}
			]
		}
	]
}
