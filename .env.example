# TopicsFlow Environment Variables
# Copy this file to .env and update the values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password_in_production
REDIS_PASSWORD=change_this_redis_password_in_production

# Application Configuration
FLASK_SECRET_KEY=generate_a_secure_random_key_here_for_production
FRONTEND_URL=http://localhost:3000
TOTP_ISSUER=TopicsFlow

# External API Keys (Optional - Leave empty if not using)
SMS_SERVICE_API_KEY=your_twilio_api_key_here
EMAIL_SERVICE_API_KEY=your_sendgrid_api_key_here
TENOR_API_KEY=your_tenor_api_key_here

# Development Settings
NODE_ENV=development

# Azure Configuration (Optional - for Azure deployment)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=uploads
COSMOS_DB_NAME=topicsflow
COSMOS_DB_URI=
USE_AZURE_STORAGE=false