# Azure Deployment Environment Variables
# Copy this file to .env.azure and fill in your values

# Azure Resource Configuration
AZURE_RESOURCE_GROUP=chatapp-rg
AZURE_LOCATION=eastus
AZURE_APP_NAME=chatapp
AZURE_ENV_NAME=chatapp-env

# Azure Container Registry
AZURE_CONTAINER_REGISTRY=chatappacr
AZURE_IMAGE_NAME=chatapp-azure
AZURE_IMAGE_TAG=latest

# Azure CosmosDB (MongoDB API)
AZURE_COSMOS_ACCOUNT=chatapp-cosmos
AZURE_COSMOS_DATABASE=chatapp
AZURE_COSMOS_CONNECTIONSTRING=mongodb://chatapp-cosmos:XXXXX@chatapp-cosmos.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@chatapp-cosmos@

# Azure Redis Cache (Optional)
AZURE_REDIS_CACHE=chatapp-redis
AZURE_REDIS_CONNECTIONSTRING=redis://:XXXXX@chatapp-redis.redis.cache.windows.net:6380/0?ssl=True

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this
FRONTEND_URL=https://chatapp.azurecontainerapps.io
TOTP_ISSUER=ChatHub

# External Services (Optional)
TENOR_API_KEY=
SMS_SERVICE_API_KEY=
SMS_SERVICE_NUMBER=
EMAIL_SERVICE_API_KEY=

# Rate Limiting
LOGIN_RATE_LIMIT=5/minute
MESSAGE_RATE_LIMIT=30/minute

# Logging
LOG_LEVEL=INFO
