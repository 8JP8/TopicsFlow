{
    "navigationFallback": {
        "rewrite": "/404.html",
        "exclude": [
            "/api/*",
            "/socket.io/*",
            "/_next/*",
            "/404",
            "/404.html",
            "/health",
            "/*.{js,css,png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot,json,map}"
        ]
    },
    "responseOverrides": {
        "404": {
            "rewrite": "/404.html",
            "statusCode": 404
        }
    },
    "globalHeaders": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "origin-when-cross-origin",
        "X-XSS-Protection": "1; mode=block"
    },
    "routes": [
        {
            "route": "/api/*",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS",
                "PATCH"
            ],
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/health",
            "methods": [
                "GET"
            ],
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/socket.io/*",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ],
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        }
    ],
    "networking": {
        "allowedIpRanges": []
    }
}